@model CalorieTrackerV2.Models.Message

@{
    ViewBag.Title = "Contact";
}

<head>
    <title>Calorie Tracker</title>

    <style>

        body {
            background-color: #E4E8E8;
            font-family: 'Fredoka One', cursive;
        }

        h2 {
            color: #3C5099;
        }
    </style>
</head>

<div id="contact" class="container-fluid bg-grey">
    <h2 class="text-center"> CONTACT</h2>
    <div class="row">
        <div class="col-sm-5">
            <p>Contact us and we will get back to you ASAP.</p>
            <p><span class="glyphicon glyphicon-map-marker"></span> Glasgow, Scotland</p>
            <p><span class="glyphicon glyphicon-phone"></span> 01292261246</p>
            <p><span class="glyphicon glyphicon-envelope"></span> contactus@calorietracker.co.uk</p>
        </div>
    </div>

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-sm-7 slideanim">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-6 form-group">

                @Html.TextBoxFor(model => model.FullName, new { @placeholder = "Name", @class = "form-control", @id = "name" })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6 form-group">

                @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control", @id = "email" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6 form-group">

                @Html.TextBoxFor(model => model.Comment, new { @placeholder = "Comment", @class = "form-control", @id = "Comment", @rows = 5 })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                <br />
                <div class="row">
                    <div class="col-md-offset-2 col-md-10">
                        
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.SubscribtionBox)
                            <div>
                                @Html.LabelFor(m => m.SubscribtionBox)
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 form-group">

                        <input type="submit" value="Send" class="btn btn-default pull-right" />
                    </div>

                </div>
            </div>
        </div>
    </div>
}
