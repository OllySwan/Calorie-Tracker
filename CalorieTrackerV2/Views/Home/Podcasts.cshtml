<head>
    <title>Podcasts</title>

    <style>

        body {
            background-color: #E4E8E8;
            font-family: 'Fredoka One', cursive;
        }

        h2 {
            color: #3C5099;
            text-decoration: underline;
        }
    </style>
    <script>

        $(document).ready(function () {
            $('#datatable').DataTable();

            $("audio").on("play", function () {
                $("audio").not(this).each(function (index, audtio) {
                    audio.pause();
                });
            });
        });

    </script>
</head>


<div class="container-fluid">

    <h2 class="text-center">Healthy Lifestyle Podcasts!</h2>
    <br />
    <table id="dataTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Play Audio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <audio controls>
                            <source src="@Url.Content(item.FilePath)" type="audio/mp3" />
                        </audio>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>